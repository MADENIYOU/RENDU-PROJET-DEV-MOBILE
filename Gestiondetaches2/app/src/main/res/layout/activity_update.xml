<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:padding="30dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:text="Modifier"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="174dp"
        android:layout_height="58dp"
        android:layout_marginEnd="16dp"
        android:entries="@array/spinner_options"
        app:layout_constraintBottom_toTopOf="@+id/title_input2"
        android:background="@drawable/border_backgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/title_input2"
        android:layout_width="313dp"
        android:layout_height="47dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="128dp"
        android:ems="10"
        android:hint="Nom de la tâche"
        android:inputType="text"
        android:background="@drawable/border_backgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descrption_input2"
        android:layout_width="311dp"
        android:layout_height="123dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="128dp"
        android:ems="10"
        android:gravity="start|top"
        android:background="@drawable/border_backgroud"
        android:hint="Détails"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_input2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:background="@color/grey_1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descrption_input2"
        app:layout_constraintVertical_bias="0.657"
        app:srcCompat="@drawable/baseline_close_24" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="277dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/background_button"
        android:text="Modifier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descrption_input2" />
</androidx.constraintlayout.widget.ConstraintLayout>